{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "paths": {
      "@node_modules/*": [
        "../node_modules/*"
      ],
      "@server/*": [
        "../../server/*"
      ],
      "@entity/*": [
        "../../server/src/entity/*"
      ],
    },
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
